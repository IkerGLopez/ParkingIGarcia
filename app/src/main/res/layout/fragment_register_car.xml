<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-black"
            android:text="Registro Parking"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textoVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:text="Tipo de vehículo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="12dp" />

        <RadioGroup
            android:id="@+id/radioBtns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textoVehiculo">

            <RadioButton
                android:id="@+id/RadioBtnCoche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coche" />

            <RadioButton
                android:id="@+id/RadioBtnMoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moto" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/marca"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Marca"
            app:layout_constraintTop_toBottomOf="@id/radioBtns"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/marcaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modelo"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Modelo"
            app:layout_constraintTop_toBottomOf="@id/marca"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/modeloText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/matricula"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Matrícula"
            app:layout_constraintTop_toBottomOf="@id/modelo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/matriculaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Interruptores -->
        <TextView
            android:id="@+id/textElectrico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eléctrico"
            android:layout_marginStart="66dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/matricula"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/electricoSw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textElectrico"
            app:layout_constraintStart_toStartOf="@id/textElectrico" />

        <TextView
            android:id="@+id/textDiscapacidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discapacidad"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/matricula"
            app:layout_constraintStart_toEndOf="@id/textElectrico" />

        <Switch
            android:id="@+id/discapacidadSw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textDiscapacidad"
            app:layout_constraintStart_toStartOf="@id/textDiscapacidad" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            app:layout_constraintTop_toBottomOf="@id/electricoSw"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
